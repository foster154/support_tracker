<p id="notice"><%= notice %></p>

<h1 class="top-pad"><%= @customer.name %></h1>

<br />

<div class="col-sm-3 col-sm-offset-4">
<p>
  <strong>KidCheck ID:</strong>
  <%= @customer.kc_cust_id %>
  <br />
  <%= link_to "View in KidCheck App", "https://go.kidcheck.com/admin/customers/default.aspx?id=#{@customer.kc_cust_id}", :target => "_blank" %>
</p>

<p>
  <%= @customer.address %> <br />
  <%= @customer.city %>, <%= @customer.state %>  <%= @customer.zip %>
</p>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
</div>
<div class="row">
	<div class="col-sm-10 col-sm-offset-1">
	<% if @customer.logs.any? %>

		<table class="table table-striped">

	  		<%= render 'logs/partials/log_table_header' %>

	  		<tbody>
			<% @customer.logs.each do |log| %>
				<%= render 'logs/partials/log_table_row', log: log %>
			<% end %>
			</tbody>
		</table>

	<% else %>
		<h2 class="center">No cases found.</h2>
	<% end %>
		
	</div>
</div>