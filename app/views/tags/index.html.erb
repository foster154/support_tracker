<h1>Tags</h1>
<div class="col-md-3 col-md-offset-1">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td>
          <%= link_to 'Show', tag %> |
          <%= link_to 'Edit', edit_tag_path(tag) %> |
          <%= link_to 'Delete', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_tag_path, class: "btn btn-primary center", :'data-no-turbolink' => "true" %>
</div>